{
  "name": "@loquilex/app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview --strictPort --host 127.0.0.1",
    "test": "vitest run",
    "test:ui:watch": "vitest",
    "e2e": "playwright test",
    "e2e:a11y": "playwright test --config=playwright.a11y.config.ts",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 1000",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.39.0",
    "@playwright/test": "^1.47.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.6.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.9"
  }
}
